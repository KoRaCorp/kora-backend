<?xml version="1.0" encoding="UTF-8"?>
<included>
    <timestamp key="DATE" datePattern="yyyy-MM-dd"/>
    <property name="CONSOLE_LOG_PATTERN"
              value="%X{request_id:-NONE} | %d{yyyy-MM-dd HH:mm:ss} | %green([%thread]) | %highlight(%-5level) | %boldWhite(%C.%M:%yellow(%L)) | %cyan(%msg%n)"/>
    <property name="FILE_LOG_PATTERN"
              value="%X{request_id:-NONE} | %d{yyyy-MM-dd HH:mm:ss} | [%thread] | %-5level | %C.%M:%L | %msg%n"/>
    <property name="LOG_PATH" value="/var/log/tomcat"/>
    <property name="BACKUP_PATH" value="/var/log/tomcat/backup"/>
    <property name="MAX_FILE_SIZE" value="100MB"/>
    <property name="MAX_HISTORY" value="30"/>
</included>
